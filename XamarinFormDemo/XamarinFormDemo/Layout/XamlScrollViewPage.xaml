<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="XamarinFormDemo.XamlScrollViewPage">
     <!--
     1) using a scroll view
     2) using multiple horizontal StackLayouts with layout options
     -->

    <ScrollView>
	    <StackLayout Orientation="Vertical" 
		             Padding="30"
		             Spacing="10">
		  <StackLayout Orientation="Horizontal"
		                Spacing="5"
		                HorizontalOptions="FillAndExpand"
		                Padding="10"
		                >
			<Label Text="Scroll View with multiple horizontal StackLayouts" Font="Small" VerticalOptions="End"/>
		  </StackLayout>

		  <StackLayout Orientation="Horizontal"
		                Spacing="5">
			<Label Text="Name" Font="Large" VerticalOptions="End"/>
			<Entry x:Name="entryName" HorizontalOptions="FillAndExpand"/>
		  </StackLayout>

		  <StackLayout Orientation="Horizontal"
		                Spacing="5">
			<Label Text="Street" Font="Large" VerticalOptions="End"/>
			<Entry x:Name="entryStreet" HorizontalOptions="FillAndExpand" />
		  </StackLayout>

		  <StackLayout Orientation="Horizontal"
		                Spacing="5">
			<Label Text="City" Font="Large" VerticalOptions="End"/>
			<Entry x:Name="entryCity" HorizontalOptions="FillAndExpand" />
		  </StackLayout>

		  <StackLayout Orientation="Horizontal"
		                Spacing="5">
			<Label Text="State" Font="Large" VerticalOptions="End"/>
			<Entry x:Name="entryState" HorizontalOptions="FillAndExpand" />
		  </StackLayout>

		  <StackLayout Orientation="Horizontal"
		                Spacing="5">
			<Label Text="Zip" Font="Large" VerticalOptions="End"/>
			<Entry x:Name="entryZip" HorizontalOptions="FillAndExpand" />
		  </StackLayout>

		  <StackLayout Orientation="Horizontal"
		                Spacing="5">
			<Label Text="Home Phone" Font="Large" VerticalOptions="End"/>
			<Entry x:Name="entryHomePhone" HorizontalOptions="FillAndExpand" />
		  </StackLayout>

		  <StackLayout Orientation="Horizontal"
		                Spacing="5">
			<Label Text="Cell Phone" Font="Large" VerticalOptions="End"/>
			<Entry x:Name="entryCellPhone" HorizontalOptions="FillAndExpand" />
		  </StackLayout>

		</StackLayout>
    </ScrollView>

</ContentPage>
